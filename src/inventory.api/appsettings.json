{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=InventoryDb;User Id=sa;Password=Your_password123;TrustServerCertificate=True",
    "RabbitMQ": "amqp://admin:admin123@localhost:5672/"
  },
  "NetworkPorts": {
    "InventoryApi": 5000,
    "SalesApi": 5001,
    "Gateway": 6000,
    "ContainerInternal": 8080,

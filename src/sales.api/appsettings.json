{
  "Shared": {
    "NetworkPorts": {
      "SalesApi": 5001,
      "InventoryApi": 5000,
      "Gateway": 6000,
      "ContainerInternal": 8080,
      "RabbitMQ": 5672,
      "SqlServer": 1433
    },
    "HealthCheck": {
      "IntervalSeconds": 30,
      "TimeoutSeconds": 15,
      "Retries": 3,
      "StartPeriodSeconds": 60
    },
    "Jwt": {
      "Key": "MyVeryLongSecretKeyThatShouldBeAtLeast256BitsLongForHMACSHA256Algorithm",
      "Issuer": "SalesAPI",
      "Audience": "SalesAPI.Users",
      "ExpiryInDays": 1
    },
    "Messaging": {
      "Enabled": true,
      "ConnectionString": "amqp://admin:admin123@salesapi-rabbitmq:5672/",
      "Workers": 3
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=salesapi-sqlserver;Database=SalesDb;User Id=sa;Password=Your_password123;TrustServerCertificate=True;ConnectRetryCount=3;ConnectRetryInterval=5;CommandTimeout=60;"
  },
  "UseInMemoryDatabase": false,
  "Database": {
    "CommandTimeoutSeconds": 120,
    "MaxRetryCount": 5,
    "MaxRetryDelaySeconds": 60,
    "EnableDetailedLogging": true,
    "ConnectionPoolMinSize": 5,
    "ConnectionPoolMaxSize": 100
  },
  "InventoryApi": {
    "BaseUrl": "http://salesapi-inventory:8080/",
    "TimeoutSeconds": 30,
    "RetryCount": 3
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Connection": "Information",
      "SalesApi": "Information"
    }
  },
  "AllowedHosts": "*"
}
